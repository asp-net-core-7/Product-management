@model IEnumerable<Product>
@{
    ViewData["Title"] = "Make Order";
}

<html>
<head>
    <title>Make Order</title>
    <link rel="stylesheet" href="~/css/CreateOrderStyle.css" />
</head>
<body>
    <h3>Order Create</h3>
    <form method="post" asp-area="" asp-controller="Order" asp-action="AddOrder" autocomplete="off">
        <div class="container mb-4 py-3 Order">
            <div class="row">
                <div class="col-6">
                    <div class="row">
                        <div class="col">
                            <label>Order Number</label>
                            <input type="number" class="form-control" name="OrderNo">
                        </div>
                    </div>
                    <div class="row">
                        <div class="col">
                            <label>Date</label>
                            <input type="date" class="form-control" name="Date">
                        </div>
                    </div>
                    <div class="row">
                        <div class="col">
                            <label>Ordered By</label>
                            <input type="text" class="form-control" name="OrderedBy">
                        </div>
                    </div>
                    <div class="row">
                        <div class="col">
                            <label>Description</label>
                            <textarea type="text" rows="3" class="form-control" name="Description"></textarea>
                        </div>
                    </div>
                </div>

                <div class="col-6">
                    <div class="row">
                        <div class="col">
                            <label>Name</label>
                            <input type="text" class="form-control" name="customer.Name">
                        </div>
                    </div>
                    <div class="row">
                        <div class="col">
                            <label>Phone</label>
                            <input type="text" class="form-control" name="customer.Phone">
                        </div>
                    </div>
                </div>
            </div>

        </div>

        <div  class="container py-3 Product">
            <h4 id="demo">Product</h4>
            <div id="product-container">
                <div  class="row mb-3">
                    <div class="col-4">
                        <select id="name" class="custom-select">

                            @foreach (var data in Model)
                            {
                                <option>@data.Name</option>
                            }

                        </select>
                    </div>
                    <div class="col">
                        <input id="qty" type="text" class="form-control" placeholder="Quantity">
                    </div>
                    <div class="col">
                        <input id="remark" type="text" class="form-control" placeholder="Remark">
                    </div>
                </div>
            </div>
            
            <div class="row">
                <div class="col">
                    <button id="add-btn" type="button" class="btn btn-secondary">Add Item</button>
                </div>
            </div>

            @*<div class="row">
                <div class="col">
                    <table class="table table-light table-borderless table-striped">
                        <thead>
                            <tr>
                                <th width="33%" style="text-align:center; border-right: 1px solid #c8d6e5;">Name</th>
                                <th width="33%" style="text-align: center; border-right: 1px solid #c8d6e5;">Quantity</th>
                                <th width="33%" style="text-align: center; border-right: 1px solid #c8d6e5;">Remark</th>
                            </tr>
                        </thead>
                        <tbody style="text-align:center;" id="list">

                        </tbody>
                    </table>
                </div>
            </div>*@
            <div class="row">
                <div class="col-1 offset-6">
                    <button type="submit" class="btn btn-secondary">Submit</button>
                </div>
            </div>
        </div>
    </form>
    <script src="~/js/OrderIndexScript.js" type="text/javascript"></script>
</body>
</html>